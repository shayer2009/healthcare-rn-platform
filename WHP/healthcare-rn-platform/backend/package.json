{
  "name": "healthcare-backend",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "node --watch src/server.js",
    "start": "node src/server.js",
    "test": "NODE_ENV=test jest --coverage",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:integration": "NODE_ENV=test jest --testPathPattern=integration",
    "migrate": "node src/migrations/migrate.js",
    "migrate:rollback": "node src/migrations/rollback.js"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "mariadb": "^3.4.1",
    "socket.io": "^4.7.5",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.13",
    "twilio": "^5.3.5",
    "@daily-co/daily-js": "^0.50.0",
    "uuid": "^10.0.0",
    "redis": "^4.6.13",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "express-validator": "^7.0.1",
    "crypto": "^1.0.1",
    "fhir-kit-client": "^1.2.0",
    "node-fhir-server-core": "^2.6.0",
    "kafkajs": "^2.2.4",
    "axios": "^1.6.7",
    "joi": "^17.11.0",
    "compression": "^1.7.4",
    "express-slow-down": "^2.0.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "@sentry/node": "^7.91.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "knex": "^3.0.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/tests/"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js",
      "**/?(*.)+(spec|test).js"
    ]
  }
}
